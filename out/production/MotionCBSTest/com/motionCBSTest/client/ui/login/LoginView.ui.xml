<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>

        .baggrund {
            background-image: url("https://www.crossfitdux.com/wp-content/uploads/2016/12/ggg.jpg");
            background-size: 100%;
            display: flex;
            width: 100%;
            justify-content: center;
            align-items: center;
        }

        .centerBox {
            background-color: #696969;
            height: 250px;
            width: 25%;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            border: none;
            border-radius: 5px;
        }

        .title {
            font-size: 40px;
            font-weight: bold;
            color: #fff;
        }

        .textInput {
            font-size: 18px;
            height: 32px;
            border-radius: 2px;
            width: 100%;
            color: #333;
            border: none;
        }

        .btn {
            height: 32px;
            width: 100%;
            border: none;
            border-radius: 2px;
            font-size: 18px;
            background-color: #333;
            cursor: pointer;
            cursor: hand;
            color: #fff;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.baggrund}">
        <g:VerticalPanel styleName="{style.centerBox}" horizontalAlignment="ALIGN_CENTER">
            <g:Label text="MotionCBS" styleName="{style.title}" />
            <g:TextBox styleName="{style.textInput}" ui:field="mobilenrTxtBox" alignment="CENTER"/>
            <g:PasswordTextBox styleName="{style.textInput}" ui:field="passwordTxtBox" alignment="CENTER"/>
            <g:Button styleName="{style.btn}" text="Login" ui:field="loginBtn" />
            <g:Button styleName="{style.btn}" text="Register" ui:field="registerBtn" />
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>

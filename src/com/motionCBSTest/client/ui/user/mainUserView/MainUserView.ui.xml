<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .top {
            color: white;
            background-image: url("https://fitnessunivers.dk/wp-content/uploads/2018/04/crossfit-udstyr.jpg");
            background-size: 100%;
            text-align: center;
            justify-content: space-between;
            align-items: center;
            font-size: 50px;
        }

        .btn {
            height: 40px;
            width: 100%;
            border: none;
            border-radius: 2px;
            font-size: 18px;
            background-color: #333;
            cursor: pointer;
            cursor: hand;
            color: #fff;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .btn:hover {
            background-color: #fff;
            color: #333;
        }

        .menu {
            padding: 10px;
            background-color: lightgrey;
        }

        .photo {
            height: 80px;
            width: 100%;
            align-items: center;
            margin-bottom: 20px;
        }

    </ui:style>

    <g:HTMLPanel>
        <g:DockLayoutPanel unit="EM" width="100%" height="100%">

            <g:north size="4">
                <g:FlowPanel styleName="{style.top}">
                    <g:Label text="MOTION CBS - trainer"></g:Label>
                </g:FlowPanel>
            </g:north>

            <g:west size="10">
                <g:FlowPanel styleName="{style.menu}">
                    <g:Image url="images/motioncbs.png" styleName="{style.photo}"></g:Image>
                    <g:Button styleName="{style.btn}" text="Change your information" ui:field="changeBtn"/>
                    <g:Button styleName="{style.btn}" text="Se info about your coworkers" ui:field="trainersTable"/>
                    <g:Button styleName="{style.btn}" text="Log out" ui:field="logoutBtn"/>
                </g:FlowPanel>
            </g:west>

            <g:center>
                <g:DeckLayoutPanel ui:field="centerPanel"/>
            </g:center>

        </g:DockLayoutPanel>

    </g:HTMLPanel>
</ui:UiBinder>